---
import { BlogPostsAndCategories } from "@/components/blog_posts_and_categories";
import { categories } from "@/data_mock_api/blog/categories.json";
import { posts } from "@/data_mock_api/blog/allposts.json";
import HTML from "@/pages/_base.astro";
const currentCategory = Astro.params.category;
export async function getStaticPaths() {
   return categories.map(({ slug }) => {return { params: { category: slug } }})
}
---
<HTML title="Blog" description="">
    <BlogPostsAndCategories
        posts={posts}
        per_category={currentCategory}
        categories={categories}
    />
</HTML>
@/data/_api/blog/categories.json@/data/_api/blog/allposts.json